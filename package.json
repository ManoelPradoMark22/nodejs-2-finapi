    "mongoose": "6.5.2",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "chai": "4.3.6",
    "chai-http": "4.3.0",
    "chai-subset": "1.6.0",
    "mocha": "10.0.0",
    "nodemon": "2.0.15",
    "nyc": "15.1.0",
    "request": "2.88.2",
    "sinon": "14.0.0"
  },
  "nyc": {
    "exclude": [
      "config",
      "src/models/index.js",
      "test/**"
